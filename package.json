{
    "name": "isoc-app",
    "version": "1.0.0",
    "description": "An Electron application with React and TypeScript",
    "main": "./out/main/index.js",
    "author": "isoc.com",
    "homepage": "https://electron-vite.org",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
        "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
        "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
        "typecheck": "npm run typecheck:node && npm run typecheck:web",
        "start": "electron-vite preview",
        "dev": "electron-vite dev --watch",
        "sqlite:rebuild": "npm rebuild better-sqlite3",
        "sqlite:migrate": "npm rebuild better-sqlite3 && npx drizzle-kit push --force && npm install",
        "sqlite:seed": "npm rebuild better-sqlite3 && npx tsx src/main/sqlite/seeders/seed.ts && npm install",
        "build": "npm run typecheck && electron-vite build",
        "postinstall": "electron-builder install-app-deps",
        "build:unpack": "npm run build && electron-builder --dir",
        "build:win": "npm run build && electron-builder --win",
        "build:win-x64": "npm run build && electron-builder --win --x64",
        "build:mac": "electron-vite build && electron-builder --mac",
        "build:mac-x64": "npm run build && electron-builder --mac --x64",
        "build:mac-arm64": "npm run build && electron-builder --mac --arm64",
        "build:linux": "electron-vite build && electron-builder --linux",
        "build:linux-deb": "electron-vite build && electron-builder --linux deb"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.1",
        "@electron-toolkit/utils": "^3.0.0",
        "better-sqlite3": "^11.8.1",
        "bootstrap": "^5.3.3",
        "drizzle-orm": "^0.39.1",
        "electron-store": "^10.0.1",
        "electron-updater": "^6.1.7",
        "html2canvas": "^1.4.1",
        "i18next": "^24.2.2",
        "jspdf": "^3.0.0",
        "pdf-to-png-converter": "^3.6.4",
        "react-hook-form": "^7.54.2",
        "react-i18next": "^15.4.0",
        "react-router-dom": "^7.1.3",
        "swiper": "^11.2.2"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config-prettier": "^2.0.0",
        "@electron-toolkit/eslint-config-ts": "^2.0.0",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@electron/notarize": "^2.5.0",
        "@types/better-sqlite3": "^7.6.12",
        "@types/is-url": "^1.2.32",
        "@types/node": "^20.17.11",
        "@types/pdfjs-dist": "^2.10.377",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.1",
        "drizzle-kit": "^0.30.4",
        "electron": "^31.0.2",
        "electron-builder": "^24.13.3",
        "electron-debug": "^4.1.0",
        "electron-devtools-installer": "^4.0.0",
        "electron-rebuild": "^3.2.9",
        "electron-vite": "^2.3.0",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.3",
        "prettier": "^3.3.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "sass-embedded": "^1.83.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.2",
        "vite": "^5.3.1"
    }
}
